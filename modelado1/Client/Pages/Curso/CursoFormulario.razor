<EditForm Model="Curso" OnInvalidSubmit=" onValidSubmit">
    
    <DataAnnotationsValidator/>
         <div class=" form-group">
            <label> Id </label>  <!-- titulo -->
            <div>
                <InputText class=" form-control" @bind-Value="@Curso.Id"/>
                <ValidationMessage For="@(()=> Curso.Id)"/>
                                   
                                  
            </div>

        </div>

    


    <div class=" form-group">
        <label>Nombre Curso</label>  <!-- titulo -->
        <div>
            <InputText class=" form-control" @bind-Value="@Curso.NombreCurso" />
            <ValidationMessage For="@(()=> Curso.NombreCurso)" />
        </div>

    </div>

    <div class=" form-group">
        <label>Tutor Curso</label>  <!-- titulo -->
        <div>
            <InputText class=" form-control" @bind-Value="@Curso.TutorCurso" />
            <ValidationMessage For="@(()=> Curso.TutorCurso)"/>
        </div>

    </div>

    <div class=" form-group">
                <label>Resumen Curso</label>  <!-- titulo -->
                <div>
                    <InputText class=" form-control" @bind-Value="@Curso.Resumen" /> <!--elimputtext es lo mismo que un text box-->
                    <ValidationMessage For="@(()=> Curso.Resumen)"/>
                </div>

        </div>

    <button class=" btn btn-primary" type="submit">
                        Guardar</button>
                        <button class="btn btn-secondary" @onclick="onCancel" type="button"> Cancelar</button>



</EditForm>

<!--<h3>Curso Formulario</h3> -->



@code {
    [Parameter] public Curso Curso { get; set; }

    [Parameter] public EventCallback onValidSubmit { get; set; } //modificar

    [Parameter] public EventCallback onCancel { get; set; } // cancelar



}
